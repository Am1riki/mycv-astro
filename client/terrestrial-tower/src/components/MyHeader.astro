---
const fio = 'MUKUSHEV AMIRBEK';
const text = `Software Engineer`;
---

<header style="background-color: rgba(217, 217, 217, 1); display: flex; position: relative; flex-direction: column; justify-content: space-between;">
  <img 
    src='../../public/photo.png'
    alt="Background" 
    style="position: absolute; right: 10%; z-index: 1;"
  />

  <h1 style="font-family: Inter, sans-serif; font-weight: 700; margin-top: 5vh; margin-left: 10vh; font-size: 7vh">
    {fio}
  </h1>
  
  <h4 style="font-weight: 700; margin-top:1vh; margin-left: 10vh;font-size: 5vh">
    {text}
  </h4>

  
  <div class="flex gap-8 justify-start items-center mt-3 ml-10">
        <button class="hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4" onclick="window.location.href='/'">
            ГЛАВНАЯ
        </button>
        <button class="hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 " onclick="window.location.href='/aboutMe'">
            ОБО МНЕ
        </button>
        <button class="hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 " onclick="window.location.href='/experience'">
            ОПЫТ/НАВЫКИ
        </button>
        <button class="hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 "  onclick="window.location.href='/gallery'">
            ГАЛЕРЕЯ ПРОЕКТА
        </button>
        <button class="hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 " onclick="window.location.href='/certificates'">
            СЕРТИФИКАТЫ
        </button>
        <button class="hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 " onclick="window.location.href='/contacts'">
            КОНТАКТЫ
        </button>

  </div>
</header>
